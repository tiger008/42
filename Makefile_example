##########
# TARGET #
##########

NAME = libft.a

############
# COMPILER #
############

CC = clang
CFLAGS = -O3 -Werror -Wall -Wextra
LIB = ar rc

##########
# HEADER #
##########

INC = -I ./include

##########
# SOURCE #
##########

SRC_DIR = ./src/
SRC_NAME = \
	main.c \
	source.c
SRC = $(addprefix $(SRC_DIR), $(SRC_NAME))

##########
# OBJECT #
##########

OBJ_DIR = ./obj/
OBJ_NAME = $(SRC_NAME:.c=.o)
OBJ = $(addprefix $(OBJ_DIR), $(OBJ_NAME))

#########
# RULES #
#########

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $(OBJ) $(INC)

$(OBJ_DIR)%.o: $(SRC_DIR)%.c
	mkdir -p $(OBJ_DIR)
	$(CC) $(CFLAGS) -o $@ -c $< $(INC)

clean:
	rm -rf $(OBJ_DIR)

fclean: clean
	rm -f $(NAME)

re: fclean all

norme: $(SRC)
	norminette $^ $(INC)libft.h

.PHONY: clean fclean re norme
